  <offsets>
    <heading-deg>0</heading-deg>
    <roll-deg>0</roll-deg>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </offsets>

	<model>
		<path>Aircraft/MiG-25/Models/Cockpit.xml</path>
	</model>

  <!-- fuselage reflection -->
