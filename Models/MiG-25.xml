    <axis>
      <x1-m>-2.225</x1-m>
      <y1-m> 0.343</y1-m>
      <z1-m>-0.226</z1-m>
      <x2-m>-1.936</x2-m>
      <y2-m> 0.339</y2-m>
      <z2-m>-0.217</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>DoorsN3</object-name>
    <property>gear/gear[0]/position-norm</property>
