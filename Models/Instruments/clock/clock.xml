<PropertyList>
  <path>achs.ac</path>

  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/MiG-25/Models/Effects/glass_shader.png</texture>
    <object-name>glass</object-name>
  </animation>

  <!--Needles-->
  <animation>
    <type>rotate</type>
    <object-name>hour_needle</object-name>
    <property>/instrumentation/clock/indicated-min</property>
    <factor> -0.5 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>hour_needle</object-name>
    <property>/instrumentation/clock/local-hour</property>
    <factor> -30 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>min_needle</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor> -0.1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>sec_needle</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor> -6 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
