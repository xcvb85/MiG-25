<?xml version="1.0"?>
<PropertyList>
<path>ai_new.ac</path>
  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/MiG-25/Models/Effects/glass_shader.png</texture>
    <object-name>glass</object-name>
  </animation>

    <animation>
        <type>material</type>
        <object-name>AIface</object-name>
		<object-name>AIpitchTape</object-name>
		<object-name>AIazimuthLittleNeedle</object-name>
		<object-name>AIgsLittleNeedle</object-name>
		<object-name>AIsideslipCage</object-name>
        <emission>
            <red>0.6</red>
            <green>0.3</green>
            <blue>0.3</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission> 
    </animation> 
	
	<animation>
        <type>material</type>
		<object-name>AIaircraftMarker</object-name>
        <object-name>AIazimuthNeedle</object-name>
        <object-name>AIpitchNeedle</object-name>
		<object-name>AIgsNeedle</object-name>
        <emission>
            <red>0.7</red>
            <green>0.3</green>
            <blue>0.3</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission> 
    </animation> 

	<animation>
        <type>rotate</type>
        <object-name>AIazimuthNeedle</object-name>
        <property>/autopilot/internal/ai-target-roll</property>
        <factor>2</factor>
        <center>
            <x-m>0.00061</x-m>
            <y-m>-0.00002</y-m>
            <z-m>-0.04319</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>  	

    <animation>
        <type>textranslate</type>
        <object-name>AIpitchTape</object-name>
        <property>orientation/pitch-deg</property>
        <bias>0.0001</bias>
        <factor>0.0051</factor>
        <step>.1</step>
        <axis>
            <x>0</x>
            <y>1</y>
        </axis>
    </animation> 
    
    <animation>
        <type>translate</type>
        <object-name>AIsideslipBall</object-name>
        <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
        <interpolation>
            <entry><ind>3.0</ind><dep>0.02</dep></entry>
            <entry><ind>0.0</ind><dep>0.0</dep></entry>
            <entry><ind>-3.0</ind><dep>-0.02</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0.0025</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>AIaircraftMarker</object-name>
        <property>orientation/roll-deg</property>
        <factor>-1</factor>
        <center>
            <x-m>-0.001838</x-m>
            <y-m>-0.00139</y-m>
            <z-m>0.005023</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation> 
