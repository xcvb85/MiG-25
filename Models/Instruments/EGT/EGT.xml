<!-- Exhaust gas temperature indicator UT-7A-710
3D instrument for Tu-154 -->
<PropertyList>
 <path>ut.ac</path>
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>glass</object-name>
  </effect>

<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>engines/engine[0]/egt-degf</property>
<!--Farenheit-->
<!--    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-134.0</dep></entry>
      <entry><ind>	1110.7</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	2190.6</ind>	<dep>	134.0</dep></entry>
    </interpolation>-->
<!--Celsius-->
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-134.0</dep></entry>
      <entry><ind>	600.0</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	1200.0</ind>	<dep>	134.0</dep></entry>
    </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.015</y-m>
    <z-m>0.003</z-m>
  </center>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>needle_2</object-name>
  <property>engines/engine[0]/egt-degf</property>
  <factor>3.6</factor>
  <offset-deg>180.0</offset-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.015</y-m>
    <z-m>-0.009</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>needle_3</object-name>
    <property>engines/engine[1]/egt-degf</property>
<!--Farenheit-->
<!--    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-134.0</dep></entry>
      <entry><ind>	1110.7</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	2190.6</ind>	<dep>	134.0</dep></entry>
    </interpolation>-->
<!--Celsius-->
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-134.0</dep></entry>
      <entry><ind>	600.0</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	1200.0</ind>	<dep>	134.0</dep></entry>
    </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.015</y-m>
    <z-m>0.003</z-m>
  </center>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>needle_4</object-name>
  <property>engines/engine[1]/egt-degf</property>
  <factor>3.6</factor>
  <offset-deg>180.0</offset-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.015</y-m>
    <z-m>-0.009</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
</PropertyList>
